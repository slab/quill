{
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "declaration": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["./**/*"]
}
