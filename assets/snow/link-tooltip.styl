linkTooltipMargin = 8px

.ql-snow
  .ql-link-tooltip::before
    content: "Visit URL:"
    line-height: 26px
    margin-right: linkTooltipMargin
  .ql-link-tooltip
    padding: 5px 12px
    white-space: nowrap
    input[type=text]
      display: none
      height: 26px
      width: 170px
    a.ql-preview
      display: inline-block
      max-width: 200px
      overflow-x: hidden
      text-overflow: ellipsis
      vertical-align: top
    a.ql-action::before
      color: textColor
      content: '-'
      line-height: 26px
      margin-left: linkTooltipMargin
    a.ql-action::after
      border-right: 1px solid borderColor
      content: 'Edit'
      margin-left: linkTooltipMargin
      padding-right: linkTooltipMargin
    a.ql-remove::before
      content: 'Remove'
      margin-left: linkTooltipMargin
    a
      line-height: 26px
  .ql-link-tooltip.ql-editing
    a.ql-preview, a.ql-remove
      display: none
    input[type=text]
      display: inline-block
    a.ql-action::after
      border-right: 0px
      content: 'Save'
      padding-right: 0px
