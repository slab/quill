{
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*", "test/**/*"]
}
